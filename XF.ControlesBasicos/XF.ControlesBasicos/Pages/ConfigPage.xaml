<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XF.ControlesBasicos.Pages.ConfigPage">
    
    <ContentPage.Content>
        <StackLayout>
            <TableView>
                <TableView.Root>
                    <TableSection Title="Privacidade">
                        <SwitchCell x:Name="swt_showInput" Text="Aceita receber e-mail?" On="{Binding ShowInput}" OnChanged="SwitchCell_OnChanged" />
                        <EntryCell x:Name="input_email" Text="{Binding Email}" IsEnabled="False" />
                    </TableSection>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>